{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Liste thèmes
{% endblock %}

{% block body %}
	{{parent()}}
	<div class="container">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Liste des thèmes
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 bg-white p-4 m-0 text-primary">
				<div class="responsive">
					<table class="table table-hover">
						<thead>
							<tr class="table-info">
								<th scope="row">Libelle :</th>
							</tr>
						</thead>
						<tbody>

							{% for theme in themes %}
								<tr class={{cycle(['table-active', 'table-primary'],loop.index0) }}>
									<td>{{theme.libelle}}</td>
								</tr>
							{% endfor %}
						</tbody>
					</tr>
				</tbody>
			</table>
		</div>

	</div>
</div></div>{% endblock %}
